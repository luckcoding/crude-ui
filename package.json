{
  "name": "@crude/ui",
  "version": "0.2.0",
  "description": "A crude React ui library",
  "author": "luckcoding",
  "main": "lib/index.js",
  "typings": "es/index.d.ts",
  "module": "es/index.js",
  "directories": {
    "lib": "lib/"
  },
  "scripts": {
    "format": "prettier --write \"{src,test}/**/*.{tsx,ts,js}\"",
    "format:docs": "prettier --write \"site/**/*.{tsx,ts,js,md}\"",
    "format:style": "stylelint \"src/**/*.less\" --fix",
    "format:check": "prettier --list-different \"{src,test}/**/*.{tsx,ts,js}\"",
    "start": "cd site && node run.ts",
    "dist": "npm run dist:dev && npm run dist:pro",
    "dist:dev": "cross-env NODE_ENV=development webpack --progress",
    "dist:pro": "webpack --mode production --progress",
    "build": "npm run build:gulp && npm run dist && npm run build:types",
    "build:gulp": "gulp build",
    "build:types": "npx tsc --emitDeclarationOnly --outDir lib && npx tsc --emitDeclarationOnly --outDir es",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src site libs --fix",
    "release": "npm run build && npm publish --access public"
  },
  "license": "ISC",
  "dependencies": {
    "@crude/events": "^0.0.1",
    "@crude/extras": "^0.2.0",
    "classnames": "^2.3.1",
    "dom-helpers": "^5.2.0",
    "lodash": "^4.17.21",
    "prop-types": "^15.7.2",
    "react-popper": "^2.2.5",
    "react-transition-group": "^4.4.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-proto-to-assign": "^7.13.12",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime-corejs2": "^7.13.10",
    "@babel/standalone": "^7.13.17",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/codemirror": "^0.0.109",
    "@types/lodash": "^4.14.168",
    "@types/marked": "^2.0.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-transition-group": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-dev": "^2.0.1",
    "codemirror": "^5.61.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^3.2.0",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "cssnano": "^5.0.1",
    "del": "^6.0.0",
    "dtslint": "^4.0.9",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-rtlcss": "^1.4.1",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "make-dir": "^3.1.0",
    "marked": "^2.0.3",
    "node-sass": "^4.12.0",
    "prettier": "^2.2.1",
    "prismjs": "^1.23.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "resize-observer-polyfill": "^1.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^1.0.0",
    "typescript": "^4.2.4",
    "url-loader": "^2.1.0",
    "webpack": "^5.31.2",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "homepage": "https://github.com/luckcoding/crude-ui",
  "keywords": [
    "react",
    "react ui",
    "react components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luckcoding/crude-ui.git"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist",
    "lib",
    "types",
    "es",
    "styles"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 10"
  ],
  "sideEffects": [
    "lib/**/styles/*",
    "es/**/styles/*",
    "dist/*",
    "*.scss",
    "*.css"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
