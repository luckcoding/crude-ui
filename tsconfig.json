{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./site/**/*.ts", "./site/**/*.tsx"]
}
